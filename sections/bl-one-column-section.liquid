<!-- /sections/bl-one-coumn-section.liquid -->
{{ 'tailwind.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

{%- liquid
  assign section_width = section.settings.width
  assign sectionid = section.id
  assign text_position = section.settings.text_position
  assign text_color = section.settings.text_color
  assign bg_color = section.settings.bg_color

  assign section_class = 'text-section ' | append: text_color

  assign my_variable = section.settings.opacity | divided_by: 100.00
-%}

{%- style -%}
  #bl-one-column-section--{{ sectionid }}{
    {%- if bg_color != 'rgba(0,0,0,0)' and bg_color != '' -%}
      background-color: {{ bg_color }}
      ;
    {%- endif -%}
  }

  #bl-one-column-section--{{ sectionid }} p {
    color: {{ text_color }}
    ;
  }

  {% if section.settings.bg_image != blank %}
    #bl-one-column-section--{{ sectionid }}{
      min-height: 100%;
      background: linear-gradient(0deg, {{ section.settings.overlay_color | color_modify: 'alpha', my_variable }}, {{ section.settings.overlay_color | color_modify: 'alpha', my_variable }}), url('{{ section.settings.bg_image | img_url: '2048x' }}');
      background-size: cover;
    }
  {% endif %}

  /* SECTION WIDTH */
  /* .wrapper--wide {
    max-width: 1440px;
    margin: auto;
    padding: 0 12px;
  }

  .wrapper--standard {
    max-width: 1200px;
    margin: auto;
    padding: 0 12px;
  }

  .wrapper--narrow {
    max-width: 1080px;
    margin: auto;
    padding: 0 12px;
  } */

  /* SECTION HEIGHT */
  .height--150 {
    height: 150px;
  }

  .height--250 {
    height: 250px;
  }

  .height--350 {
    height: 350px;
  }

  .height--450 {
    height: 450px;
  }

  .height--550 {
    height: 550px;
  }

  .height--650 {
    height: 650px;
  }

  .bl-blocks-wrapper--{{ sectionid }} {
    display: flex;
    justify-content: center;
    align-items: {{ section.settings.mb_vertical }};
  }

  .bl-blocks--{{ sectionid }} {
    width: 100%;
  }

  @media only screen and (min-width: 768px) {
    .bl-blocks-wrapper--{{ sectionid }} {
      justify-content: {{ section.settings.horizontal }};
      align-items: {{ section.settings.vertical }};
    }

    .bl-blocks--{{ sectionid }} {
      width: {{ section.settings.wrapper }}%;
    }
  }

  .bl-section-padding--{{ sectionid }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;"
  }

  @media only screen and (max-width: 768px) {
    .bl-section-padding--{{ sectionid }} {
      padding-top: {{ section.settings.mb_padding_top }}px;
      padding-bottom: {{ section.settings.mb_padding_bottom }}px;
      padding-left: {{ section.settings.mb_padding_left }}px;
      padding-right: {{ section.settings.mb_padding_right }}px;"
    }
  }

  .material-symbols-outlined {
    font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 48
  }
{%- endstyle -%}

<section
  id="bl-one-column-section--{{ sectionid }}"
  class="bl-section-padding--{{ sectionid }}">
  <div class="bl-img-overlay">
    <div class="text__wrapper">

      <div style="max-width: {{ section.settings.width }}px;" class="{{ section.settings.height }} bl-blocks-wrapper--{{ sectionid }} bl-m-auto bl-px-4">

        <div class="bl-blocks--{{ sectionid }}">
          <p>OVERHAUL PLAN</p>
          <a href="/">LINK</a>

          {% for block in section.blocks %}
            {% case block.type %}
              {% when '@app' %}
                {% render block %}

              {% when 'heading' %}
                {{ block.settings.text }}
            {% endcase %}
          {% endfor %}

        </div>

      </div>

    </div>
  </div>
</section>

