{{ 'tailwind.css' | asset_url | stylesheet_tag }}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

{%- liquid
  assign section_width = section.settings.width
  assign sectionid = section.id
  assign text_position = section.settings.text_position
  assign text_color = section.settings.text_color
  assign bg_color = section.settings.bg_color

  assign section_class = 'text-section ' | append: text_color

  assign bg_overlay = section.settings.opacity | divided_by: 100.00
-%}

{%- style -%}
  #bl-two-column-section--{{ sectionid }}{
    {%- if bg_color != 'rgba(0,0,0,0)' and bg_color != '' -%}
      background-color: {{ bg_color }}
      ;
    {%- endif -%}
  }

  {% if section.settings.bg_image != blank %}
    #bl-two-column-section--{{ sectionid }}{
        min-height: 100%;
        background: linear-gradient(0deg, {{ section.settings.overlay_color | color_modify: 'alpha', bg_overlay }}, {{ section.settings.overlay_color | color_modify: 'alpha', bg_overlay }}), url('{{ section.settings.bg_image | img_url: '2048x' }}');
        background-size: cover;
    }
  {% endif %}

  .bl-blocks--{{ sectionid }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.gap }}px;
    justify-content: center;
  }

  @media only screen and (min-width: 768px) {
    /* SECTION HEIGHT */
    .height--150 {
      height: 150px;
    }

    .height--250 {
      height: 250px;
    }

    .height--350 {
      height: 350px;
    }

    .height--450 {
      height: 450px;
    }

    .height--550 {
      height: 550px;
    }

    .height--650 {
      height: 650px;
    }

    .bl-blocks-wrapper--{{ sectionid }} {
      display: flex;
      justify-content: center;
      align-items: {{ section.settings.mb_vertical }};
    }

    .bl-blocks--{{ sectionid }} {
      width: 100%;
    }

    .bl-blocks-wrapper--{{ sectionid }} {
      justify-content: {{ section.settings.horizontal }};
      align-items: {{ section.settings.vertical }};
    }

    .bl-blocks--{{ sectionid }} {   
      grid-template-columns: {{ section.settings.column_ratios }};
      align-items: {{ section.settings.alignment }};
      width: {{ section.settings.wrapper }}%;
    }
  }

  .bl-section-padding--{{ sectionid }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_left }}px;
      padding-right: {{ section.settings.padding_right }}px;"
  }

  @media only screen and (max-width: 768px) {
    .bl-section-padding--{{ sectionid }} {
      padding-top: {{ section.settings.mb_padding_top }}px;
      padding-bottom: {{ section.settings.mb_padding_bottom }}px;
      padding-left: {{ section.settings.mb_padding_left }}px;
      padding-right: {{ section.settings.mb_padding_right }}px;"
    }
  }

  /* ICONS */
.material-symbols-outlined {
    font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 48
  }

/* BUTTON HOVER */
.bl-btn--link {
    text-decoration: underline;
  }

  .bl-btn {
    display: inline-block;
    text-decoration: none;
    transition-duration: 0.4s;
  }

  .bl-btn:hover {
    opacity: 0.7;
  }

  /* SPACE BLOCK */
  .bl-dt-space {
    display: block !important;
  }
  .bl-mb-space {
    display: none !important;
  }
  @media only screen and (max-width: 768px) {
    .bl-dt-space {
      display: none !important;
    }
    .bl-mb-space {
      display: block !important;
    }
  }

  /* IMAGE */
  @media only screen and (min-width: 768px) {
    .bl--image-wrapper--{{ sectionid }} {
      padding: 0px !important;
    }
  }

{%- endstyle -%}

<section
  id="bl-two-column-section--{{ sectionid }}"
  class="bl-section-padding--{{ sectionid }}">
  <div class="bl-img-overlay">
    <div class="text__wrapper">
      <div style="max-width: {{ section.settings.width }}px;" class="{{ section.settings.height }} bl-blocks-wrapper--{{ sectionid }} bl-m-auto bl-px-4">
        <div class="bl-blocks--{{ sectionid }}">

          {% for block in section.blocks %}
            {% case block.type %}

              {% when '@app' %}
                <div class="bl--block-wrapper--{{ sectionid }}">
                    {% render block %}
                </div>

              {% when 'text' %}
                {%- liquid
                  assign column_image_overlay = block.settings.opacity | divided_by: 100.00
                -%}
                <div class="bl--block-wrapper--{{ sectionid }}" style="padding: {{ block.settings.column_padding }}px; text-align: {{ block.settings.text_align }}; border-style: solid; border-width: {{ block.settings.border_width }}px; border-radius: {{ block.settings.border_radius }}px; border-color: {{ block.settings.border_color }}; background-color: {{ block.settings.bg_color }}; {% if block.settings.bg_image != blank %} background: linear-gradient(0deg, {{ block.settings.overlay_color | color_modify: 'alpha', column_image_overlay }}, {{ block.settings.overlay_color | color_modify: 'alpha', column_image_overlay }}), url('{{ block.settings.bg_image | img_url: '1024x' }}'); min-height: 100%; background-size: cover; {% endif %}">
                  {% if block.settings.subheading != blank %}
                    <h5 class="bl-subheading" style="color: {{ block.settings.subheading_color }}; letter-spacing: {{ block.settings.subheading_letter }}px; margin-bottom: {{ block.settings.subheading_space }}px;">{{ block.settings.subheading }}</h4>
                  {% endif %}

                  {% if block.settings.heading != blank %}
                    <h2 class="bl-heading" style="color: {{ block.settings.heading_color }}; margin-bottom: {{ block.settings.heading_space }}px;">{{ block.settings.heading }}</h2>
                  {% endif %}

                  {% if block.settings.description != blank %}
                    <div class="bl-description" style="color: {{ block.settings.description_color }}; margin-bottom: {{ block.settings.description_space }}px;">{{ block.settings.description }}</div>
                  {% endif %}

                  {% if block.settings.btn_text != blank %}
                    <a class="bl-btn" href="{{ block.settings.btn_link }}" style="color: {{ block.settings.btn_color }}; background-color: {{ block.settings.btn_bg_color }}; padding: 6px {{ block.settings.btn_padding }}px; border-style: solid; border-width: {{ block.settings.btn_border_width }}px; border-radius: {{ block.settings.btn_border_radius }}px; border-color: {{ block.settings.btn_border_color }}; margin-bottom: {{ block.settings.btn_space }}px;">{{ block.settings.btn_text }}</a>
                  {% endif %}

                  {% if block.settings.under_text != blank %}
                    <div class="bl-under-text" style="color: {{ block.settings.under_text_color }}; margin-bottom: {{ block.settings.under_text_space }}px;">{{ block.settings.under_text }}</div>
                  {% endif %}
                </div>

              {% when 'space' %}
                <div
                class="bl-dt-space"
                style="
                padding-top: {{ block.settings.dt_vertical_space }}px;
                padding-left: {{ block.settings.dt_horizontal_space }}px;
                "
                ></div>
                <div
                class="bl-mb-space"
                style="
                padding-top: {{ block.settings.mb_vertical_space }}px;
                padding-left: {{ block.settings.mb_horizontal_space }}px;
                "
                ></div>

              {% when 'image' %}
                {%- liquid
                assign image_overlay = block.settings.opacity | divided_by: 100.00
                -%}
                <div class="bl--image-wrapper--{{ sectionid }}" style="width: 100%; height: 100%; padding-bottom: {{ block.settings.mobile_height }}px; {% if block.settings.bg_image != blank %} background: linear-gradient(0deg, {{ block.settings.overlay_color | color_modify: 'alpha', image_overlay }}, {{ block.settings.overlay_color | color_modify: 'alpha', image_overlay }}), url('{{ block.settings.bg_image | img_url: '1024x' }}'); min-height: 100%; background-size: cover; {% endif %} border-radius: {{ block.settings.border_radius }}px;">

            {% endcase %}
          {% endfor %}

        </div>
      </div>
    </div>
  </div>
</section>

